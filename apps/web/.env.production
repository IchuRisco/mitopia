# Mitopia Frontend Production Environment Variables

# API Configuration
VITE_API_URL=https://api.mitopia.com
VITE_SIGNALING_URL=https://signaling.mitopia.com
VITE_TRANSLATION_URL=https://translation.mitopia.com
VITE_BILLING_URL=https://billing.mitopia.com

# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Application Configuration
VITE_APP_NAME=Mitopia
VITE_APP_DESCRIPTION="Your Meeting Utopia"
VITE_APP_URL=https://mitopia.com
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Analytics
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
VITE_MIXPANEL_TOKEN=your_mixpanel_token

# Error Reporting
VITE_SENTRY_DSN=https://your-sentry-dsn

# WebRTC Configuration
VITE_STUN_SERVER=stun:stun.l.google.com:19302
VITE_TURN_SERVER=turn:turn.mitopia.com:3478

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/*,video/*,audio/*,application/pdf

# Meeting Configuration
VITE_MAX_PARTICIPANTS=100
VITE_MAX_MEETING_DURATION=28800
VITE_DEFAULT_MEETING_DURATION=3600

# Translation
VITE_SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ru,zh,ja,ko,ar,hi
VITE_DEFAULT_LANGUAGE=en

# Social Login
VITE_GOOGLE_CLIENT_ID=your_google_client_id
VITE_MICROSOFT_CLIENT_ID=your_microsoft_client_id
