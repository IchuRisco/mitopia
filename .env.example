# Mitopia Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL="postgresql://mitopia:mitopia_dev_password@localhost:5432/mitopia"
# Alternative free database options:
# DATABASE_URL="postgresql://user:pass@db.railway.app:5432/railway"  # Railway PostgreSQL
# DATABASE_URL="postgresql://user:pass@db.supabase.co:5432/postgres"  # Supabase
# DATABASE_URL="mysql://user:pass@gateway01.us-east-1.prod.aws.planetscale.com:3306/database"  # PlanetScale

# Redis Configuration
REDIS_URL="redis://localhost:6379"
# Alternative free Redis options:
# REDIS_URL="redis://default:password@redis-12345.upstash.io:12345"  # Upstash Redis
# REDIS_URL="redis://user:pass@redis-cloud-endpoint:port"  # Redis Cloud

# Message Queue
RABBITMQ_URL="amqp://mitopia:mitopia_dev_password@localhost:5672"

# JWT Authentication
JWT_SECRET="mitopia_jwt_secret_change_in_production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_EXPIRES_IN="30d"

# OpenAI API (for enhanced AI features)
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-3.5-turbo"
OPENAI_MAX_TOKENS=1000

# Stripe Payment Processing
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# PayPal Payment Processing (Alternative)
PAYPAL_CLIENT_ID="your_paypal_client_id"
PAYPAL_CLIENT_SECRET="your_paypal_client_secret"
PAYPAL_MODE="sandbox"  # or "live" for production

# TURN/STUN Server Configuration
TURN_SERVER_URL="turn:localhost:3478"
TURN_USERNAME="mitopia"
TURN_PASSWORD="mitopia_turn_secret"
STUN_SERVER_URL="stun:stun.l.google.com:19302"

# Email Service (for notifications and invitations)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
FROM_EMAIL="noreply@mitopia.com"
FROM_NAME="Mitopia"

# SMS Service (Twilio for phone invitations)
TWILIO_ACCOUNT_SID="your_twilio_account_sid"
TWILIO_AUTH_TOKEN="your_twilio_auth_token"
TWILIO_PHONE_NUMBER="+1234567890"

# Application URLs
FRONTEND_URL="http://localhost:3000"
API_URL="http://localhost:8001"
SIGNALING_URL="http://localhost:8002"
TRANSLATION_URL="http://localhost:8004"
BILLING_URL="http://localhost:8005"

# File Storage (for meeting recordings and exports)
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="mitopia-storage"

# Alternative storage options:
# CLOUDINARY_CLOUD_NAME="your_cloud_name"
# CLOUDINARY_API_KEY="your_api_key"
# CLOUDINARY_API_SECRET="your_api_secret"

# Google Services (for calendar integration and exports)
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"
GOOGLE_REDIRECT_URI="http://localhost:3000/auth/google/callback"

# Microsoft Services (for Teams integration)
MICROSOFT_CLIENT_ID="your_microsoft_client_id"
MICROSOFT_CLIENT_SECRET="your_microsoft_client_secret"

# Slack Integration
SLACK_CLIENT_ID="your_slack_client_id"
SLACK_CLIENT_SECRET="your_slack_client_secret"
SLACK_SIGNING_SECRET="your_slack_signing_secret"

# Notion Integration
NOTION_CLIENT_ID="your_notion_client_id"
NOTION_CLIENT_SECRET="your_notion_client_secret"

# Analytics and Monitoring
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
SENTRY_DSN="https://your-sentry-dsn"
MIXPANEL_TOKEN="your_mixpanel_token"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN="http://localhost:3000"
COOKIE_SECRET="mitopia_cookie_secret_change_in_production"
SESSION_SECRET="mitopia_session_secret_change_in_production"

# Development/Production Environment
NODE_ENV="development"
LOG_LEVEL="info"
PORT=8001

# Feature Flags
ENABLE_TRANSLATION=true
ENABLE_RECORDING=true
ENABLE_ANALYTICS=true
ENABLE_CUSTOM_BRANDING=false

# Subscription Plans
TRIAL_DURATION_DAYS=30
STARTER_PLAN_PRICE=9.99
PROFESSIONAL_PLAN_PRICE=29.99
ENTERPRISE_PLAN_PRICE=99.99

# Usage Limits (for free tier)
FREE_TIER_MEETING_MINUTES=60
FREE_TIER_PARTICIPANTS=5
FREE_TIER_TRANSLATIONS=10

# Webhook URLs (for external integrations)
WEBHOOK_SECRET="mitopia_webhook_secret"
CALENDAR_WEBHOOK_URL="https://your-domain.com/webhooks/calendar"
PAYMENT_WEBHOOK_URL="https://your-domain.com/webhooks/payments"

# Deployment Configuration
RAILWAY_PROJECT_ID="your_railway_project_id"
VERCEL_PROJECT_ID="your_vercel_project_id"
DOCKER_REGISTRY="your-registry.com/mitopia"

# Backup Configuration
BACKUP_FREQUENCY="daily"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET="mitopia-backups"
