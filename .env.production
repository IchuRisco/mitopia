# Mitopia Production Environment Variables
# DO NOT commit this file to version control

# Application
NODE_ENV=production
LOG_LEVEL=info

# Database (Use your production database URL)
DATABASE_URL=postgresql://mitopia_user:secure_password@db.mitopia.com:5432/mitopia_prod

# Redis (Use your production Redis URL)
REDIS_URL=redis://default:secure_redis_password@redis.mitopia.com:6379
REDIS_PASSWORD=secure_redis_password

# RabbitMQ (Use your production RabbitMQ URL)
RABBITMQ_URL=amqp://mitopia_user:secure_rabbitmq_password@rabbitmq.mitopia.com:5672
RABBITMQ_USER=mitopia_user
RABBITMQ_PASSWORD=secure_rabbitmq_password

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_this_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# OpenAI API
OPENAI_API_KEY=sk-your-production-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Payment Processing
PAYPAL_CLIENT_ID=your_paypal_live_client_id
PAYPAL_CLIENT_SECRET=your_paypal_live_client_secret
PAYPAL_MODE=live

# TURN/STUN Server
TURN_SERVER_URL=turn:turn.mitopia.com:3478
TURN_USERNAME=mitopia_turn_user
TURN_PASSWORD=secure_turn_password
STUN_SERVER_URL=stun:stun.l.google.com:19302

# Email Service (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@mitopia.com
SMTP_PASS=your_smtp_app_password
FROM_EMAIL=noreply@mitopia.com
FROM_NAME=Mitopia

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=mitopia-production-storage

# Google Services
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Microsoft Services
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# Slack Integration
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_SIGNING_SECRET=your_slack_signing_secret

# Notion Integration
NOTION_CLIENT_ID=your_notion_client_id
NOTION_CLIENT_SECRET=your_notion_client_secret

# Analytics and Monitoring
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
MIXPANEL_TOKEN=your_mixpanel_token

# Security
CORS_ORIGIN=https://mitopia.com,https://www.mitopia.com,https://app.mitopia.com
COOKIE_SECRET=your_super_secure_cookie_secret_change_this_in_production
SESSION_SECRET=your_super_secure_session_secret_change_this_in_production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_TRANSLATION=true
ENABLE_RECORDING=true
ENABLE_ANALYTICS=true
ENABLE_CUSTOM_BRANDING=true
ENABLE_ADVANCED_SECURITY=true

# Subscription Plans
TRIAL_DURATION_DAYS=30
STARTER_PLAN_PRICE=9.99
PROFESSIONAL_PLAN_PRICE=29.99
ENTERPRISE_PLAN_PRICE=99.99

# Usage Limits
MAX_PARTICIPANTS=100
MAX_MEETING_DURATION=28800
DEFAULT_MEETING_DURATION=3600
MAX_FILE_SIZE=10485760

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure_grafana_password

# Backup Configuration
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=mitopia-backups

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/mitopia.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/mitopia.com.key

# Domain Configuration
DOMAIN=mitopia.com
API_DOMAIN=api.mitopia.com
SIGNALING_DOMAIN=signaling.mitopia.com
TRANSLATION_DOMAIN=translation.mitopia.com
BILLING_DOMAIN=billing.mitopia.com
